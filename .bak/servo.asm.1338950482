; or http://www.atmel.com/products/microcontrollers/avr/tinyAVR.aspx

.include "tn13def.inc"

	rjmp	main		;reset handle


;* Long delay

;* Register variables

	.equ  T1, r16 ; pulse high loop
	.equ  T2, r17 ; inner low loop
	.equ  T3, r18 ; outer low loop
	.equ  T4, r19 ; repeat loop

;* Code
pulse:
	sbi   PORTB, 0
high_loop:
	dec   r16
	brne  high_loop
	cbi   PORTB, 0
low_loop:
	dec   r17
	brne  low_loop
	dec   r18
	brne  low_loop
	dec   r19
	brne  pulse
	ret

main:
	cbi   PORTB, 1
	sbi   PORTB, 2
	ldi   r16, 22		; 600 us pulse
	ldi   r17, 216		; 19.4 ms low
	ldi   r18, 2		; by x times low
	ldi   r19, 50		; repeat 50 times (1s)
	rcall pulse
	cbi   PORTB, 2
	sbi   PORTB, 1
	ldi   r16, 75		; 2 ms pulse
	ldi   r17, 163		; 18 ms low
	ldi   r18, 2		; by x times low
	ldi   r19, 50		; repeat 50 times (1s)
	rcall pulse
	rjmp  main		;another run
